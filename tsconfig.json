{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*", "vite-env.d.ts", "public/assets"],
  "exclude": ["node_modules", "dist"]
}